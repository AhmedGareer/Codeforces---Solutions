 #include <bits/stdc++.h>
    using namespace std;

    long long v[1000001];
    int main()
    {
        vector <char> v;
        string s;

        cin>>s;
        for(int i=0;i<s.size();i+=2){

            v.push_back(s[i]);
        }
        sort(v.begin(),v.end());
        for(int i=0;i<v.size();i++){
            cout<<v[i];
            if(i!=v.size()-1)
                cout<<"+";
        }

        return 0;
    }
